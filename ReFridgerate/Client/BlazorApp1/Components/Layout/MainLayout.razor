@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu/>
    </div>

    <main>

        <div class="page">

            <main>
                <article class="content px-4">
                    @Body
                </article>
            </main>
        </div>

        <style>
            .page {
                display: flex;
                height: 100vh;
            }

            .sidebar {
                width: 250px;
                background-color: #f0f0f0;
                padding: 1rem;
            }

            .nav-item {
                margin-bottom: 1rem;
            }

            .nav-link {
                display: flex;
                align-items: center;
                gap: 1rem;
                padding: 0.5rem;
                color: #333;
                text-decoration: none;
            }

            .icon {
                width: 24px;
                height: 24px;
                display: flex;
                align-items: center;
                justify-content: center;
            }

            main {
                flex: 1;
                padding: 2rem;
            }
        </style>
        
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>