@using BlazorApp1.Services
@inherits LayoutComponentBase
@inject IThemeState ThemeState

<AuthorizeView>
    <Authorized>
        <div class="page @(ThemeState.IsDarkMode ? "dark" : "light")">
            <div class="sidebar">
                <NavMenu/>
            </div>
            <main>
                <article class="content px-4">
                    @Body
                </article>
            </main>
        </div>
    </Authorized>
    <NotAuthorized>
        <div class="page">
            <main>
                @* <article class="content px-4"> *@
                    @Body
                @* </article> *@
            </main>
        </div>
    </NotAuthorized>
</AuthorizeView>
<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>